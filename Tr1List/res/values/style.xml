<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   
    <!-- GENERAL -->
    <style name="BackgroundLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>          
    </style>
       
    <!-- HEADER -->
    <style name="HeaderLayout">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">48dp</item>
         <item name="android:orientation">vertical</item>
    </style>
        
    <style name="HeaderItemLayout">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">48dp</item>  
         <item name="android:background">#116611</item> 
    </style>
        
    <style name="HeaderItemEditBox">
       <!--  <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item> -->
        <item name="android:textColor">#ffffff</item> 
        <item name="android:textColorHint">#eeeeee</item>       
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:layout_weight">0.25</item> 
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="HeaderAddItemButton">
          <item name="android:layout_width">36dp</item>
         <item name="android:layout_height">36dp</item> 
         <item name="android:padding">6dp</item> 
         <item name="android:background">@drawable/ic_action_new_light</item>
    </style>
    
     <style name="HeaderEditItemButton">
         <item name="android:layout_width">36dp</item>
         <item name="android:layout_height">36dp</item>
         <item name="android:padding">6dp</item> 
         <item name="android:background">@drawable/ic_action_edit_light</item>
    </style>
         
    <style name="HeaderItemDeleteButton">
         <item name="android:layout_width">48dp</item>
         <item name="android:layout_height">match_parent</item>         
         <item name="android:icon">@drawable/ic_action_discard_light</item>
    </style>
        
    <style name="HeaderItemSettingsButton">
         <item name="android:layout_width">48dp</item>
         <item name="android:layout_height">match_parent</item>         
         <item name="android:icon">@drawable/ic_action_settings</item>
    </style>
    
    <style name="HeaderItemShareButton">
         <item name="android:layout_width">48dp</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:icon">@drawable/ic_action_share_light</item>
    </style>
    
    <style name="HeaderItemEditButton">
         <item name="android:layout_width">48dp</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:icon">@drawable/ic_action_edit_light</item>
    </style>
    
    <style name="HeaderItemNewButton">
         <item name="android:layout_width">48dp</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:icon">@drawable/ic_action_new_light</item>
    </style>
    
    <style name="HeaderItemCloseButton">
         <item name="android:layout_width">48dp</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:icon">@drawable/ic_action_remove_light</item>
    </style>
    
    
    <!-- LIST -->    
    <style name="ListLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>        
    </style>
    
    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:animateLayoutChanges">true</item>
        <!-- <item name="android:layout_marginTop">1dp</item> -->
    </style>
    
    <style name="ListItemCheckbox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    
    <style name="ListItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
    </style>
        
    <!-- <style name="ListItemSmallCountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingRight">4dp</item>     
        <item name="android:paddingBottom">4dp</item>   
        <item name="android:layout_gravity">right</item>
    </style> -->    
    
    <style name="ListItemButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ic_action_discard</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    
</resources>